<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333"
    android:orientation="vertical"
    tools:context=".PlayList2">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="10dp"
        android:layout_weight="0"
        android:background="#1C1C1C"
        android:fontFamily="@font/alike_angular"
        android:gravity="center|top"
        android:text="BongoVongo(1905)- Play List"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:background="@drawable/halka">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="5dp"
                android:background="#2C2C2C"
                android:onClick="v6"
                android:orientation="horizontal"
                android:tag="6">

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:tag="6"
                    app:srcCompat="@drawable/bongovongofirst" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/bangla"
                    android:tag="6"
                    android:text="বঙ্গভঙ্গের ইতিহাস ১৯০৫ সাল| পটভূমি, কারণ ফলাফল ও হিন্দু সমাজের বিরোধিতা- প্রথম পর্ব"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="5dp"
                android:onClick="v7"
                android:orientation="horizontal"
                android:tag="7">

                <ImageView
                    android:id="@+id/imageView16"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:tag="7"
                    app:srcCompat="@drawable/bongovongosecond" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/bangla"
                    android:tag="7"
                    android:text="বঙ্গভঙ্গের ইতিহাস ১৯০৫| স্বদেশী, বয়কট ও সন্ত্রাসবাদী আন্দোলন, বঙ্গভঙ্গ রদ- দ্বিতীয় পর্ব"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
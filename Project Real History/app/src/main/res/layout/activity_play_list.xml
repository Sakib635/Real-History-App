<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#373737"
    android:orientation="vertical"
    tools:context=".PlayList">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="10dp"
        android:layout_weight="0"
        android:background="#1C1C1C"
        android:fontFamily="@font/alike_angular"
        android:gravity="center|top"
        android:text="Bongo and Bangalijati- Play List"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:background="@drawable/halka">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="5dp"
                android:background="#292929"
                android:onClick="v1"
                android:orientation="horizontal"
                android:tag="1">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:tag="1"
                    app:srcCompat="@drawable/bongo" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/bangla"
                    android:tag="1"
                    android:text="বঙ্গের ইতিহাস | বঙ্গ কী? কীভাবে ও কখন হলো বঙ্গ"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="5dp"
                android:onClick="v2"
                android:orientation="horizontal"
                android:tag="2">

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:tag="2"
                    app:srcCompat="@drawable/bangalijati" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/bangla"
                    android:tag="2"
                    android:text="বাঙালি জাতির উৎপত্তির ইতিহাস| সংকর জাতি বলার কারণ| আর্য জাতির ইতিহাস| বাঙালি জাতির উদ্ভব ও বিকাশ"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="5dp"
                android:background="#292929"
                android:onClick="v3"
                android:orientation="horizontal"
                android:tag="3">

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:tag="3"
                    app:srcCompat="@drawable/banglavasha" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/bangla"
                    android:tag="3"
                    android:text="বাংলা ভাষার উৎপত্তি বা উদ্ভব, বাংলা ভাষার জন্ম কিভাবে হলো, বাংলা ভাষার ক্রমবিকাশ, বাংলা ভাষার ইতিহাস"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="5dp"
                android:onClick="v4"
                android:orientation="horizontal"
                android:tag="4">

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:tag="4"
                    app:srcCompat="@drawable/kromo" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/bangla"
                    android:tag="4"
                    android:text="বাংলা ভাষার ক্রমবিকাশ ও ক্রমবিবর্তন, বাংলা ভাষার জন্ম কিভাবে হলো, বাংলা ভাষার উৎপত্তি, বাংলার ইতিহাস"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="5dp"
                android:background="#292929"
                android:onClick="v5"
                android:orientation="horizontal"
                android:tag="5">

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:tag="5"
                    app:srcCompat="@drawable/bangalisecondpart" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/bangla"
                    android:tag="5"
                    android:text="বাঙালি জাতির উৎপত্তির ইতিহাস| বাঙালি জাতির উদ্ভব ও বিকাশ| আর্য জাতির ইতিহাস| দ্বিতীয় পর্ব"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>